<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    android:background="#C2185B"
    tools:context=".edit_activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
    <TextView
        android:id="@+id/edit_shayri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="hello world"
        android:textSize="@dimen/_25sdp" />
    </ScrollView>
    <Button
        android:id="@+id/edit_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edit_font"
        android:text="background"
        android:textSize="@dimen/_10sdp" />

    <Button
        android:id="@+id/edit_font"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="font"
        android:textSize="@dimen/_10sdp" />

    <Button
        android:id="@+id/edit_emoji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Emoji"
        android:textSize="@dimen/_10sdp"

        />

    <Button
        android:id="@+id/edit_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edit_emoji"
        android:layout_centerHorizontal="true"
        android:text="Text Color"
        android:textSize="@dimen/_10sdp" />

    <Button
        android:id="@+id/edit_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edit_textsize"
        android:layout_alignParentRight="true"
        android:text="Share"

        android:textSize="@dimen/_10sdp" />



    <Button
        android:id="@+id/edit_textsize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="Text size"
        android:textSize="@dimen/_10sdp">

    </Button>




</RelativeLayout>